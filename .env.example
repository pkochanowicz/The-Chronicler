# Discord Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
GUILD_ID=your_guild_id_here
RECRUITMENT_CHANNEL_ID=your_recruitment_channel_id_here
FORUM_CHANNEL_ID=your_character_sheet_vault_forum_id_here
CEMETERY_CHANNEL_ID=your_cemetery_forum_id_here

# Guild member role IDs (comma-separated) - Wanderer, Seeker, Pathfinder, Trailwarden
# These roles can register characters via /register_character
GUILD_MEMBER_ROLE_IDS=wanderer_role_id,seeker_role_id,pathfinder_role_id,trailwarden_role_id

# Lifecycle management role IDs (comma-separated) - Pathfinder, Trailwarden
# These roles can bury characters and manage character lifecycle
LIFECYCLE_ROLE_IDS=pathfinder_role_id,trailwarden_role_id

# Google Sheets Configuration
GOOGLE_SHEET_ID=your_google_sheet_id_here
GOOGLE_CREDENTIALS_FILE=credentials.json

# Bot Behavior
POLL_INTERVAL_SECONDS=60
