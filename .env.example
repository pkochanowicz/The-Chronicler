# ============================================================================
# Azeroth Bound Discord Bot - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to git! (It's in .gitignore)
# ============================================================================

# ----------------------------------------------------------------------------
# Discord Configuration
# ----------------------------------------------------------------------------
# Your Discord bot token from https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Your guild (server) ID - Enable Developer Mode, right-click server, Copy ID
GUILD_ID=your_guild_id_here

# Your bot's Application ID (same as Client ID from Discord Developer Portal)
APPLICATION_ID=your_application_id_here

# Channel where recruitment posts appear (officers approve/reject here)
RECRUITMENT_CHANNEL_ID=your_recruitment_channel_id_here

# Forum channel for approved character sheets (permanent storage)
CHARACTER_SHEET_VAULT_CHANNEL_ID=your_character_sheet_vault_forum_id_here

# Forum channel for deceased characters (cemetery)
CEMETERY_CHANNEL_ID=your_cemetery_forum_id_here

# Forum Tag IDs (required if your forum channels require tags)
# To get tag IDs: Right-click on the forum tag in Discord → Copy ID (Developer Mode required)
# Leave empty/0 if your forum channels don't require tags
RECRUITMENT_DEFAULT_TAG_ID=0
CEMETERY_DEFAULT_TAG_ID=0

# ----------------------------------------------------------------------------
# Guild Member Role IDs
# ----------------------------------------------------------------------------
# Users with ANY of these roles can use /register_character
# Get role IDs: Server Settings → Roles → Right-click role → Copy ID
# Set at least ONE of these (all four recommended)

WANDERER_ROLE_ID=0
SEEKER_ROLE_ID=0
PATHFINDER_ROLE_ID=0
TRAILWARDEN_ROLE_ID=0

# ----------------------------------------------------------------------------
# Officer Role Mentions (for @mentions in recruitment posts)
# ----------------------------------------------------------------------------
# Format: <@&ROLE_ID> - Use actual role ID, not name
# Example: <@&1234567890123456789>

PATHFINDER_ROLE_MENTION=<@&your_pathfinder_role_id>
TRAILWARDEN_ROLE_MENTION=<@&your_trailwarden_role_id>

# ----------------------------------------------------------------------------
# Officer Reaction Emojis (Hardcoded - Not Configurable)
# ----------------------------------------------------------------------------
# Officers react to recruitment posts with these emojis:
# ✅ APPROVE_EMOJI - Approves character (moves to Character Vault)
# ❌ REJECT_EMOJI - Rejects character (sends DM to user)
# These are hardcoded in config/settings.py and cannot be changed via .env

# ----------------------------------------------------------------------------
# PostgreSQL Database Configuration
# ----------------------------------------------------------------------------
# The full connection string for your PostgreSQL database
# Format: postgresql+asyncpg://user:password@host:port/database_name
DATABASE_URL=postgresql+asyncpg://user:password@host:port/database_name

# Supabase Project URL (optional - for additional Supabase features)
SUPABASE_URL=your_supabase_project_url_here

# Supabase Anon Key (optional - for additional Supabase features)
SUPABASE_KEY=your_supabase_anon_key_here

# ----------------------------------------------------------------------------
# Cloudflare R2 Image Storage (Recommended for portrait uploads)
# ----------------------------------------------------------------------------
# R2 Account ID from Cloudflare dashboard
R2_ACCOUNT_ID=your_r2_account_id_here

# R2 Access credentials (create in Cloudflare R2 console)
R2_ACCESS_KEY_ID=your_r2_access_key_id_here
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key_here

# R2 Bucket name (e.g., "azeroth-bound-images")
R2_BUCKET_NAME=azeroth-bound-images

# Public URL for R2 bucket (custom domain or R2.dev URL)
R2_PUBLIC_URL=https://your-bucket.r2.dev

# ----------------------------------------------------------------------------
# MCP Server Integration (Optional - for AI-powered features)
# ----------------------------------------------------------------------------
# External MCP server URL (if using discord-guildmaster-mcp)
MCP_SERVER_URL=http://localhost:8081

# API key for MCP server authentication
MCP_API_KEY=your_mcp_api_key_here

# MCP server port (default: 8081)
MCP_PORT=8081

# ----------------------------------------------------------------------------
# Webhook Security
# ----------------------------------------------------------------------------
# Secret key for Discord webhook authentication (min 32 characters)
# Generate with: python -c 'import secrets; print(secrets.token_urlsafe(32))'
WEBHOOK_SECRET=generate_a_random_32_character_secret_here

# ----------------------------------------------------------------------------
# Bot Behavior
# ----------------------------------------------------------------------------
# Seconds before interactive flows timeout (default: 900 = 15 minutes)
INTERACTIVE_TIMEOUT_SECONDS=900

# Polling interval for background tasks in seconds (default: 60)
POLL_INTERVAL_SECONDS=60

# ----------------------------------------------------------------------------
# Visual Defaults
# ----------------------------------------------------------------------------
# Default portrait URL if user doesn't provide one
# Use Imgur or Discord CDN for reliability
DEFAULT_PORTRAIT_URL=https://i.imgur.com/default_placeholder.png

# ----------------------------------------------------------------------------
# Production Deployment (Optional - for Fly.io/Render.com)
# ----------------------------------------------------------------------------
# Port for webhook server (auto-set by hosting platforms, usually 8080)
# PORT=8080

# Application environment (development, production, test)
ENV=development
